<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/icon_stat"
            android:textSize="25sp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_statistique_icon_stat" />

        <TextView
            android:id="@+id/title_stat"
            android:layout_width="0dp"
            android:layout_height="40dip"
            android:gravity="left"
            android:layout_marginLeft="15dip"
            android:layout_weight="0.7"
            android:text="@string/activity_home_statistique_button_statistiques"
            android:textColor="#1f8dd6"
            android:textSize="28sp"/>

        <TextView
            android:id="@+id/activity_statistique_button_reset"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="1dip"
            android:textSize="25sp"
            android:text="@string/activity_statistique_icon_reset"
             />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:baselineAligned="false"
        android:layout_weight="0.30" >
        

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@drawable/fond_stat"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/icon_stat_nb_parties_jouees"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:contentDescription="@string/perso_description"
                android:src="@drawable/stat_parties_jouees" />

            <TextView
                
                android:id="@+id/text_stat_nb_parties_jouees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="15dip"
                android:text="@string/activity_statistique_nb_parties"
                android:textSize="13sp" 
                
                />

            <TextView 
                android:id="@+id/stat_nb_parties_jouees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dip"
                android:layout_marginTop="5dip"
                android:textSize="40sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#1f8dd6" />


            <TextView
                android:id="@+id/etoile_stat_nb_parties_jouees"
                android:layout_width="fill_parent"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="@string/activity_statistique_icon_nb_parties_jouees" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@drawable/fond_stat"
            android:orientation="vertical" >
            
            <ImageView
                android:id="@+id/icon_stat_pourcentage_parties_gagnees"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:contentDescription="@string/perso_description"
                android:src="@drawable/stat_gagnees" />

            <TextView
                android:id="@+id/text_stat_pourcentage_parties_gagnees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="15dip"
                android:textColor="@android:color/black"
                android:text="@string/activity_statistique_pourcentage_parties_gagnees"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/stat_pourcentage_parties_gagnees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dip"
                android:layout_marginTop="5dip"
                android:textSize="40sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#1f8dd6" />
            
            <TextView
                android:id="@+id/etoile_stat_pourcentage_parties_gagnees"
                android:layout_width="fill_parent"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="@string/activity_statistique_icon_pourcentage_parties_gagnees" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.34"
            android:background="@drawable/fond_stat"
            android:orientation="vertical" >
            
            <ImageView
                android:id="@+id/icon_stat_temps"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="15dip"
                android:contentDescription="@string/perso_description"
                android:src="@drawable/stat_temps" />

            <TextView
                android:id="@+id/text_stat_temps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="15dip"
                android:textColor="@android:color/black"
                android:text="@string/activity_statistique_temps"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/stat_temps_heure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dip"
                    android:layout_marginTop="5dip"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#1f8dd6"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/stat_temps_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="@string/activity_statistique_textH"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#1f8dd6"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/stat_temps_minute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#1f8dd6"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/stat_temps_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="@string/activity_statistique_textMin"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#1f8dd6"
                    android:textSize="30sp" />

            </LinearLayout>
            
            <TextView
                android:id="@+id/etoile_stat_temps"
                android:layout_width="fill_parent"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="@string/activity_statistique_icon_temps" />

        </LinearLayout>

    </LinearLayout>
    
    
    

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.32"  >

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="0.33"
		    android:background="@drawable/fond_stat"
		    android:orientation="vertical" >
			<ImageView
                android:id="@+id/icon_stat_nb_capots"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="10dip"
                android:contentDescription="@string/perso_description"
                android:src="@drawable/stat_medal" />

            <TextView
                android:id="@+id/text_stat_nb_capots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="15dip"
                android:textColor="@android:color/black"
                android:text="@string/activity_statistique_nb_capots"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/stat_nb_capots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dip"
                android:layout_marginTop="5dip"
                android:textSize="40sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#1f8dd6" />
            
            <TextView
                android:id="@+id/etoile_stat_nb_capots"
                android:layout_width="fill_parent"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-15dp"
                android:layout_height="wrap_content"
                android:text="@string/activity_statistique_icon_nb_capots" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:background="@drawable/fond_stat"
            android:orientation="vertical" >
            
            <ImageView
                android:id="@+id/icon_stat_nb_dedans"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="15dip"
                android:contentDescription="@string/perso_description"
                android:src="@drawable/stat_dedans" />

            <TextView
                android:id="@+id/text_stat_nb_dedans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:textColor="@android:color/black"
                android:layout_marginLeft="15dip"
                android:text="@string/activity_statistique_nb_dedans"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/stat_nb_dedans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dip"
                android:layout_marginTop="5dip"
                android:textSize="40sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#1f8dd6" />
            
             <TextView
                android:id="@+id/etoile_stat_nb_dedans"
                android:layout_width="fill_parent"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:text="@string/activity_statistique_icon_nb_dedans" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.34"
            android:background="@drawable/fond_stat"
            android:orientation="vertical" >
            
            <ImageView
                android:id="@+id/icon_stat_nb_belotes"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="15dip"
                android:contentDescription="@string/perso_description"
                android:src="@drawable/stat_belotes" />

            <TextView
                android:id="@+id/text_stat_nb_belotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="15dip"
                android:textColor="@android:color/black"
                android:text="@string/activity_statistique_nb_belote"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/stat_nb_belotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dip"
                android:layout_marginTop="5dip"
                android:textSize="40sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#1f8dd6" />
            
            <TextView
                android:id="@+id/etoile_stat_nb_belotes"
                android:layout_width="fill_parent"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:text="@string/activity_statistique_icon_nb_belotes" />
    	</LinearLayout>
  	</LinearLayout>
  	
    
    
</LinearLayout>