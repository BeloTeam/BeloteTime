<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" >

        <fr.belotime.view.utils.IconFontTextView
            android:id="@+id/activity_about_icon_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1f8dd6"
            android:textSize="25sp"
            app:typeface="elegant"
            android:layout_marginRight="15dp"
            android:text="@string/activity_about_icon_about" />

        <fr.belotime.view.utils.IconFontTextView
            android:id="@+id/activity_about_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:typeface="roboto_thin"
            android:text="@string/activity_home_button_apropos"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#1f8dd6"
            android:textSize="28sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".4"
            android:orientation="vertical" >

            <fr.belotime.view.utils.IconFontTextView
                android:id="@+id/activity_about_text_informations_title"
                android:gravity="center_horizontal"
                android:textColor="#1f8dd6"
                android:textSize="19sp"
                android:layout_marginBottom="15dp"
                app:typeface="roboto_thin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_about_text_informations_title" />

            <fr.belotime.view.utils.IconFontTextView
                android:id="@+id/activity_about_text_informations"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textSize="13sp"
                app:typeface="roboto_thin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_about_text_informations" />

        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_weight=".7999"
            android:background="#1f8dd6"
            android:layout_width="wrap_content"
            android:layout_height="130dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <fr.belotime.view.utils.IconFontTextView
                android:id="@+id/activity_about_text_contact"
                android:gravity="center_horizontal"
                android:textColor="#1f8dd6"
                android:textSize="19sp"
                android:layout_marginBottom="20dp"
                app:typeface="roboto_thin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_about_text_contact" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal" >

                <fr.belotime.view.utils.IconFontTextView
                    android:id="@+id/activity_about_icon_contact_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    app:typeface="elegant"
                    android:textSize="19sp"
                    android:text="@string/activity_about_icon_contact_mail" />

                <fr.belotime.view.utils.IconFontTextView
                    android:id="@+id/activity_about_text_contact_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1f8dd6"
                    app:typeface="roboto_thin"
                    android:textSize="14sp"
                    android:text="@string/activity_about_text_contact_mail" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp" >

                <ImageView
                    android:id="@+id/activity_about_icon_contact_github"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:contentDescription="@string/activity_about_img_portrait_description"
                    android:src="@drawable/icon_github" />

                <fr.belotime.view.utils.IconFontTextView
                    android:id="@+id/activity_about_text_contact_github"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:typeface="roboto_thin"
                    android:textColor="#1f8dd6"
                    android:textSize="14sp"
                    android:text="@string/activity_about_text_contact_github" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <fr.belotime.view.utils.IconFontTextView
            android:id="@+id/activity_about_text_developpeurs"
            android:layout_gravity="center_horizontal"
            android:textColor="#1f8dd6"
            android:textSize="19sp"
            app:typeface="roboto_thin"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_about_text_developpeurs"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/activity_about_img_portrait_description"
                    android:src="@drawable/smartphone_portrait_nathan" />

                <fr.belotime.view.utils.IconFontTextView
                    android:id="@+id/activity_about_text_david"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:typeface="roboto_thin"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/activity_about_text_david" />

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/activity_about_img_portrait_description"
                    android:src="@drawable/smartphone_portrait_nathan" />

                <fr.belotime.view.utils.IconFontTextView
                    android:id="@+id/activity_about_text_arthur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:typeface="roboto_thin"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/activity_about_text_arthur" />

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/activity_about_img_portrait_description"
                    android:src="@drawable/smartphone_portrait_nathan" />

                <fr.belotime.view.utils.IconFontTextView
                    android:id="@+id/activity_about_text_loic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:typeface="roboto_thin"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/activity_about_text_loic" />

            </LinearLayout>
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/activity_about_img_portrait_description"
                    android:src="@drawable/smartphone_portrait_nathan" />

                <fr.belotime.view.utils.IconFontTextView
                    android:id="@+id/activity_about_text_nathan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:typeface="roboto_thin"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/activity_about_text_nathan" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

