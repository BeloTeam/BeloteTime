<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/tapis3"
    android:columnCount="3"
    android:orientation="horizontal"
    android:rowCount="3" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="top|left"
        android:layout_row="0" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipe 1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipe 2" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_equipe1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_equipe2" />
        </TableRow>
    </TableLayout>

    <!-- joueur nord -->

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="1"
        android:layout_gravity="center|top"
        android:layout_row="0"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.40"
            android:src="@drawable/perso3" />

        <TextView
            android:id="@+id/jNord"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/nom_joueur_nord" />
    </LinearLayout>

    <!-- recap dernier pli -->

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="top|right"
        android:layout_row="0" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="voir " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dernier pli " />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_equipe1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/score_equipe2" />
        </TableRow>
    </TableLayout>

    <!-- joueur ouest -->

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_gravity="left|center"
        android:layout_row="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:src="@drawable/perso3" />

        <TextView
            android:id="@+id/jOuest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/nom_joueur_ouest" />
    </LinearLayout>

    <!-- centre -->

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/as_coeur3"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:gravity="center"
            android:src="@drawable/as_coeur"
            android:visibility="gone"  />

        <Button
            android:id="@+id/prendre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/prendre"
            android:visibility="gone" />

        <Button
            android:id="@+id/passer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/passer"
            android:visibility="gone" />

        <!-- Les cartes du plis en cours -->

        <TableLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:shrinkColumns="*"
            android:stretchColumns="*" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/carteNord"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/as_coeur"
                    android:visibility="gone" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/carteOuest"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/as_coeur"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/carteEst"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/as_coeur"
                    android:visibility="gone" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/carteSud"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/as_coeur"
                    android:visibility="gone" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <!--
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Custom Dialog"/>
        <Button
            android:id="@+id/passer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Passer" />
    </LinearLayout>
    -->


    <!-- joueur est -->

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_column="2"
        android:layout_gravity="right|center"
        android:layout_row="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:src="@drawable/perso3" />

        <TextView
            android:id="@+id/jEst"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/nom_joueur_est" />
    </LinearLayout>

    <!-- joueur sud cartes -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center|top"
        android:layout_row="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/jSud"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/nom_joueur_sud" />

        <TextView
            android:id="@+id/DonneurS"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Donneur"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/as_coeur"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="-10dp"
                android:src="@drawable/as_coeur" />

            <ImageView
                android:id="@+id/roi_coeur"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="-10dp"
                android:src="@drawable/roi_coeur" />

            <ImageView
                android:id="@+id/dame_trefle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="-10dp"
                android:src="@drawable/dame_trefle" />

            <ImageView
                android:id="@+id/neuf_carreau"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="-10dp"
                android:src="@drawable/neuf_carreau" />

            <ImageView
                android:id="@+id/as_coeur2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center"
                android:layout_marginRight="-10dp"
                android:src="@drawable/as_coeur" />

            <ImageView
                android:id="@+id/roi_coeur2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="-10dp"
                android:src="@drawable/roi_coeur"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/dame_trefle2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="-10dp"
                android:src="@drawable/dame_trefle"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/neuf_carreau2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="-10dp"
                android:src="@drawable/neuf_carreau"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <GridLayout
        android:layout_height="200dp"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="1" >
    </GridLayout>

</GridLayout>