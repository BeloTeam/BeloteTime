<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory
        android:key="equipeName"
        android:title="Nom des équipes" >
        <EditTextPreference             
            android:key="nomEquipe1"
            android:title="Nom de l'équipe 1"
            android:defaultValue="Nous"
            android:dialogTitle="Saisir le nom de l'équipe"
            android:dialogIcon="@android:drawable/ic_menu_edit"
            android:maxLength="10"
            />
        <EditTextPreference             
            android:key="nomEquipe2"
            android:title="Nom de l'équipe 2"
            android:defaultValue="Eux"
            android:maxLength="10"
            android:dialogIcon="@android:drawable/ic_menu_edit"
            android:dialogTitle="Saisir le nom de l'équipe"
            />
    </PreferenceCategory>
    
    <PreferenceCategory
        android:key="reglagesSup"
        android:title="Réglages" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="veille"
            android:title="Empêcher la mise en veille" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="cumule"
            android:title="Afficher les scores cumulés" />
    </PreferenceCategory>

</PreferenceScreen>