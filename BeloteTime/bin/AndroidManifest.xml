<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.belotime"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/perso3"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:persistent="true">
        
        <activity
            android:name=".view.activity.LauncherActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            android:screenOrientation="landscape" 
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="fr.belotime.view.activity.HomeActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            android:screenOrientation="landscape" 
            android:configChanges="orientation">
        </activity> 
        
        
        <activity 
            android:name="fr.belotime.view.activity.OptionsActivity"
            android:parentActivityName="fr.belotime.view.activity.HomeActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            android:screenOrientation="unspecified"
            android:icon="@drawable/cards_white_50x50">
        </activity>
        
        
        <activity
            android:name="fr.belotime.view.activity.StatistiquesActivity"  
            android:screenOrientation="landscape" 
            android:configChanges="orientation"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            android:parentActivityName="fr.belotime.view.activity.HomeActivity">
        </activity>
        
        
        <activity 
            android:name="fr.belotime.view.activity.AboutActivity" 
            android:configChanges="orientation"
            android:screenOrientation="landscape"
            android:parentActivityName="fr.belotime.view.activity.HomeActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">   
        </activity>
        
        
        <activity 
            android:name="fr.belotime.view.activity.RulesActivity"
            android:parentActivityName="fr.belotime.view.activity.HomeActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">   
        </activity>
        
        
        <activity 
            android:name="fr.belotime.view.activity.ScoreActivity"
            android:screenOrientation="landscape" 
            android:configChanges="orientation" 
            android:parentActivityName="fr.belotime.view.activity.HomeActivity"
            android:theme="@android:style/Theme.Holo.Light"
            ></activity>
        
        
        <activity 
            android:name="fr.belotime.view.activity.PlayActivity"
            android:screenOrientation="landscape" 
            android:configChanges="orientation" 
            android:parentActivityName="fr.belotime.view.activity.HomeActivity"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            ></activity>
    </application>

</manifest>
